<div class="setup-form">
   <div class="setup-title">
     <h2>会員登録</h2>
   </div>
   <div class="flash_message">
     <p class="notice"><%= notice %></p>
     <p class="alert"><%= alert %></p>
   </div>
      
   <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
  
    <div class="field">
      <!--%= f.label :メールアドレス %><br />-->
      <%= f.email_field :email, autofocus: true, placeholder:"メールアドレス",autocomplete: "email", class:"form", required: true  %>
    </div>
  
    <div class="field">
      <!--%= f.label :パスワード %>-->
      <!--% if @minimum_password_length %>-->
       <!--@minimum_password_length %> 文字以上)</em>-->
      <%= f.password_field :password, placeholder:"パスワード(#{@minimum_password_length} 文字以上)", autocomplete: 'off', class:"form", required: true  %>
    </div>
  
    <div class="field">
      <!--%= f.label :パスワード(確認) %><br />-->
      <%= f.password_field :password_confirmation, placeholder: "パスワード(確認) ",  autocomplete: 'off',class:"form", required: true  %>
    </div>
    
    <div class="field">
      <%= f.label :学年　%>
      <div class="select-wrapper">
         <%= f.select :grade, ['1回生', '2回生', '3回生','4回生'] , class: "select"%>
      </div>
    </div>
  
    <div class="actions">
      <%= f.submit "新規登録", class: "button" %>
    </div>
  <% end %>
  
  <div class="atag_wrapper">
    <%= render "devise/shared/links" %>
  </div>
  
</div>